<odoo>
    <data>
        <record id="sale_order_product_form" model="ir.ui.view">
            <field name="name">sale.order.product.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="attributes">
                    <attribute name="options">{'no_create':True, 'no_open': True}</attribute>
                </xpath>
            </field>
        </record>
        
        <record id="purchase_order_product_form" model="ir.ui.view">
            <field name="name">purchase.order.product.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="attributes">
                    <attribute name="options">{'no_create':True, 'no_open': True}</attribute>
                </xpath>
            </field>
        </record>
        
        <record id="account_invoice_customer_product_form" model="ir.ui.view">
            <field name="name">account.invoice.customer.product.form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="attributes">
                    <attribute name="options">{'no_create':True, 'no_open': True}</attribute>
                </xpath>
            </field>
        </record>
        
        <record id="account_invoice_supplier_product_form" model="ir.ui.view">
            <field name="name">account.invoice.supplier.product.form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="attributes">
                    <attribute name="options">{'no_create':True, 'no_open': True}</attribute>
                </xpath>
            </field>
        </record>
    </data> 
</odoo>